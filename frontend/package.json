{
  "name": "frontend",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./styles/tailwind.css -o ./app/tailwind.css",
    "build": "yarn build:css --minify && remix build",
    "dev:frontend": "remix dev",
    "dev:css": "yarn build:css --watch",
    "postinstall": "remix setup node",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.0.2",
    "remix": "^1.1.1"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.6",
    "tailwindcss": "^3.0.22"
  }
}
