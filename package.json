{
  "name": "analyzer",
  "description": "Forex trading analysis and sharing tool.",
  "author": "Mark Skelton",
  "license": "ISC",
  "packageManager": "yarn@3.1.1",
  "workspaces": [
    "api",
    "frontend",
    "service",
    "test"
  ],
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "ts": "tsc -b",
    "dev": "concurrently -n service,frontend,css -c 'blue.bold,magenta.bold,green.bold' 'yarn workspace service dev' 'yarn dev:frontend' 'yarn dev:css'",
    "test": "playwright test",
    "test:e2e": "yarn test --project e2e",
    "test:integ": "yarn test --project integ"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/eslint-parser": "^7.16.5",
    "@mskelton/eslint-config": "^7.1.0",
    "@mskelton/tsconfig": "^1.1.1",
    "@playwright/test": "^1.17.2",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "concurrently": "^7.0.0",
    "eslint": "^8.7.0",
    "eslint-plugin-playwright": "^0.7.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-sort": "^2.3.1",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.7",
    "typescript": "^4.5.4"
  }
}
